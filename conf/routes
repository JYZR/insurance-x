# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /welcome                    controllers.Application.welcome()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Login
GET     /login                      controllers.Application.index()
POST    /login                      controllers.LoginController.authenticate()
POST    /logout                     controllers.LoginController.logout()

# Tasks
GET     /tasks                      controllers.TaskController.tasks()
POST    /tasks                      controllers.TaskController.newTask()
POST    /tasks/:id/delete           controllers.TaskController.deleteTask(id: Long)

# User management
GET     /users                      controllers.UserController.showForm()
POST    /users                      controllers.UserController.newUser()
POST    /users/delete               controllers.UserController.deleteAccount()